﻿@model LeThiHuyen995_DATN.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Profile1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <h3> Thông tin khách hàng</h3>
        <div class="col-md-11">
            @using (Html.BeginForm("PostProfile", "Account"))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="exampleInputEmail1">Full Name</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="FullName" value="@Model.FullName">

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="UserName" value="@Model.UserName" readonly>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Phone</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Phone" value="@Model.Phone">

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Email" value="@Model.Email" readonly>

                </div>
                <div class="form-group">
                    <div class="text-right">
                        <button type="submit" class="btn btn-success">Cập nhật</button>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-11">

            @Html.Action("LichSuDonHang", "Review")
        </div>
        <div class="col-md-11">
            <div class="text-right">
                <a href="/account/profile1" class="btn btn-danger">Quay lại</a>
            </div>
        </div>

    </div>
</div>
