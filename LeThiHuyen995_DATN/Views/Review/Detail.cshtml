@model IEnumerable<LeThiHuyen995_DATN.Models.EF.OrderDetail>
@{
    ViewBag.Title = "Chi tiết đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <h3> Thông tin đơn hàng</h3>
        <div class="col-md-11">
            @if (Model != null && Model.Any())
            {
                int i = 1;
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Product.Title</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td>@LeThiHuyen995_DATN.Common.Common.FormatNumber((item.Price * item.Quantity), 0)</td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            }

        </div>
        <div class="col-md-11">
            <div class="text-right">
                <a href="/account/profile1" class="btn btn-danger">Quay lại</a>
            </div>
        </div>

    </div>
</div>
